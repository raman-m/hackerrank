<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net7.0;net6.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <AssemblyName>RamanM.HackerRank</AssemblyName>
    <RootNamespace>RamanM.HackerRank</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\algorithms\warmup\solve-me-first\HackerRank.md" Link="Algorithms\Warmup\SolveMeFirst\HackerRank.md" />
    <None Include="..\..\algorithms\warmup\solve-me-first\README.md" Link="Algorithms\Warmup\SolveMeFirst\README.md" />
    <SolveMeFirst Include="Algorithms\Warmup\SolveMeFirst\*.*" />

    <None Include="..\..\algorithms\implementation\sock-merchant\HackerRank.md" Link="Algorithms\Implementation\SalesByMatch\HackerRank.md" />
    <None Include="..\..\algorithms\implementation\sock-merchant\README.md" Link="Algorithms\Implementation\SalesByMatch\README.md" />
    <SalesByMatch Include="Algorithms\Implementation\SalesByMatch\*.*" />
  </ItemGroup>

  <Target Name="CopyFilesToHackerRankSrcFolders" AfterTargets="Build">
    <Message Text="Executing CopyFilesToHackerRankSrcFolders task" Importance="High" />

    <Copy SourceFiles="@(SolveMeFirst)" DestinationFolder="..\..\algorithms\warmup\solve-me-first" />
    <Copy SourceFiles="@(SalesByMatch)" DestinationFolder="..\..\algorithms\implementation\sock-merchant" />

    <Message Text="CopyFilesToHackerRankSrcFolders task completed" Importance="High" />
  </Target>
</Project>
